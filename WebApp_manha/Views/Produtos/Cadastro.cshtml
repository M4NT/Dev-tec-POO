@model WebApp_manha.Models.NovoProdutoModelView

<div class="row">
    <div class="offset-md-4col-md-4">
        <div class="card-header">
            Cadastro de Produtos
        </div>
        <div class="card-body">
            <form action="/Produtos/SalvarDados" method="post">
                <label>Descrição do Produto</label>
                <input type="text" class="form-control" name="Descricao"/>
                <br/>
                <label>Valor</label>
                <input type="text" name="Valor" class="form-control"/>
                <select name="Ativo" class="form-control">
                    <option value="true">Ativo</option>
                    <option value="false">Inativo</option>
                </select>
                <br/>
                <label>Lista de Categorias</label>
                <select name="CategoriaId" class="form-control">
                    <option value="0">Selecione uma Categoria</option>
                    @foreach(var categoria in Model.ListaCategorias)
                    {
                        <option value="@categoria.Id">@categoria.Nome</option>
                    }
                </select>
                <br/>
                <button type="submit" class="btn btn-sucess">
                    Salvar Produtos
                </button>
            </form>
        </div>
    </div>
</div>